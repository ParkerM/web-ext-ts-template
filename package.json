{
  "name": "web-ext-ts-template",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "repository": "github:ParkerM/web-ext-ts-template",
  "bugs": "https://github.com/ParkerM/web-ext-ts-template/issues",
  "scripts": {
    "start": "web-ext run",
    "start:dev-es": "web-ext run --firefox=firefoxdeveloperedition --pref intl.locale.requested=es-MX -p \"esmx\" --keep-profile-changes",
    "lint:web-ext": "npm run build-release && web-ext lint",
    "lint:eslint": "eslint src/**/*.{js,ts}",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "webpack --mode=development",
    "build-release": "webpack --mode=production",
    "stage": "npx standard-version --skip.tag",
    "stage:patch": "npm run stage --release-as patch",
    "stage:minor": "npm run stage --release-as minor",
    "stage:major": "npm run stage --release-as major",
    "pack": "web-ext build",
    "release": "npm run build-release && npm run pack",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.7.0"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/jest": "^29.5.2",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "mockzilla": "^0.14.0",
    "mockzilla-webextension": "^0.15.0",
    "prettier": "^2.8.8",
    "source-map-loader": "^4.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "web-ext": "^7.6.2",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "husky": "^8.0.3"
  },
  "dependencies": {},
  "overrides": {
    "@types/jest": "$@types/jest",
    "jest": "$jest",
    "webextension-polyfill": "$webextension-polyfill"
  }
}
